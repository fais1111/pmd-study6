
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Admins can read, write, and delete any files in the study_materials path.
    match /study_materials/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'techworldinfo98@gmail.com';
    }

    // Allow public read access to all study materials for logged-in users.
    // This allows students to view/download the PDFs and other materials.
    match /study_materials/{allPaths=**} {
      allow get: if request.auth != null;
    }
  }
}
