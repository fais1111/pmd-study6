rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == "techworldinfo98@gmail.com";
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth.uid != null;

      match /attempts/{attemptId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /study_materials/{materialId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }

    match /quizzes/{quizId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    
    match /configs/{configId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }

    // Rules for the 'attempts' collection group query
    match /{path=**}/attempts/{attemptId} {
      // Admins can read/delete any attempt document in any user's subcollection.
      // This is required for the batch delete operation when a quiz is updated.
      allow read, delete: if isAdmin();
    }
  }
}
